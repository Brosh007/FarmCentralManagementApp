@model FArmer_Central_Managament_app.Models.Farmer

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    #main {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    header {
        text-align: center;
        margin-bottom: 20px;
    }

    h1 {
        color: #007bff;
        font-size: 32px;
        margin-top: 0;
    }

    p {
        color: #555;
        line-height: 1.6;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

    dl.row {
        display: flex;
        flex-wrap: wrap;
    }

    dt.col-sm-2 {
        width: 20%;
        font-weight: bold;
        color: #007bff;
        padding: 5px;
    }

    dd.col-sm-10 {
        width: 80%;
        padding: 5px;
        margin: 0;
    }

    hr {
        border-color: #007bff;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .actions {
        margin-top: 10px;
    }

        .actions a {
            margin-right: 10px;
            padding: 6px 10px;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
        }

            .actions a:hover {
                background-color: #0056b3;
            }

</style>

<div id="main">
    <header>
        <h1>Details</h1>
    </header>

    <div>
        <h4>Farmer</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FarmerId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FarmerId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Surname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Surname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
        </dl>
    </div>

    <div class="actions">
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }, new { @class = "btn btn-primary" })
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}